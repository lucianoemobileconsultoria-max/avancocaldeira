rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'engelmobile2020@gmail.com';
    }
    
    // Helper function to check if user is approved
    function isApproved(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.approved == true;
    }
    
    // Users collection - for approval system
    match /users/{userId} {
      // Allow user to create their own record (during registration)
      allow create: if request.auth != null && 
                      request.auth.uid == userId &&
                      request.resource.data.approved == false;
      
      // Allow admin to read all users
      allow read: if isAdmin();
      
      // Allow admin to update any user (approve/reject)
      allow update: if isAdmin();
      
      // Allow user to read their own record
      allow read: if request.auth != null && request.auth.uid == userId;
    }
    
    // SHARED Progress collection - accessible by all approved users
    match /progress/{activityKey} {
      // Anyone authenticated and approved can read
      allow read: if request.auth != null && isApproved(request.auth.uid);
      
      // Anyone authenticated and approved can write
      allow write: if request.auth != null && isApproved(request.auth.uid);
    }
    
    // SHARED Activities collection
    match /shared_data/{document=**} {
      // Anyone authenticated and approved can read
      allow read: if request.auth != null && isApproved(request.auth.uid);
      
      // Anyone authenticated and approved can write
      allow write: if request.auth != null && isApproved(request.auth.uid);
    }
    
    // OLD structure - allow reading for migration (admin only)
    match /users/{userId}/progress/{progressId} {
      // Allow admin to read old structure for migration
      allow read: if isAdmin();
      
      // Allow user to read their own old data
      allow read: if request.auth != null && request.auth.uid == userId;
    }
  }
}
